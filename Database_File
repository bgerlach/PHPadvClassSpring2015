CREATE TABLE IF NOT EXISTS users (
userid INT UNSIGNED AUTO_INCREMENT NOT NULL PRIMARY KEY,
username VARCHAR(255) NOT NULL UNIQUE KEY,
password VARCHAR(255) NOT NULL UNIQUE KEY
)



CREATE TABLE IF NOT EXISTS NFLforum (
forumid INT UNSIGNED AUTO_INCREMENT NOT NULL PRIMARY KEY,
subject VARCHAR(255) NOT NULL UNIQUE KEY,
userpost VARCHAR(255) NOT NULL UNIQUE KEY,
username VARCHAR(255) NOT NULL,
FOREIGN KEY (username) REFERENCES users(username),
logged DATETIME NOT NULL DEFAULT '0000-00-00 00:00:00'
);


